{
  "name": "alpacadesk",
  "productName": "AlpacaDesk",
  "version": "0.1.0",
  "description": "Native Windows Algorithmic Trading Application",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:python\"",
    "dev:electron": "vite",
    "dev:python": "cd engine && uvicorn src.alpacadesk_engine.main:app --reload --port 8765",
    "build": "tsc && vite build && electron-builder",
    "build:python": "cd engine && pyinstaller --onefile src/alpacadesk_engine/main.py",
    "test": "jest",
    "test:python": "cd engine && pytest",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json}\""
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.7",
    "lightweight-charts": "^4.1.0",
    "keytar": "^7.9.0",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Homeless-Pets-Foundation/alpaca-trading.git"
  },
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.alpacadesk.app",
    "productName": "AlpacaDesk",
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    },
    "files": [
      "dist/**/*",
      "engine/dist/**/*"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  }
}
